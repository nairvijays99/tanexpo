{
  "name": "tanexpo-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "Share UI components between Expo Native and TanStack Start",
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nairvijays99/tanexpo"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "clean": "turbo run clean && rm -rf node_modules",
    "lint": "biome lint .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "format:check": "biome format .",
    "type-check": "turbo run type-check",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=./packages/* && changeset publish",
    "release:dry-run": "changeset publish --dry-run",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "verify": "turbo run lint && turbo run test && turbo run build",
    "e2e": "node scripts/test-e2e.js",
    "prepack": "pnpm build",
    "rmnm": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +"
  },
  "keywords": [
    "expo",
    "tanstack",
    "react",
    "react-native",
    "cross-platform"
  ],
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@vitest/ui": "^4.0.16",
    "glob": "13.0.0",
    "tsup": "^8.5.1",
    "turbo": "^2.7.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
